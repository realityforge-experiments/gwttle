<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">

    <servlet>
        <servlet-name>com.mySampleApplication.BookRepository LibraryService</servlet-name>
        <servlet-class>com.mySampleApplication.server.LibraryServiceImpl</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>BookReviewService</servlet-name>
        <servlet-class>com.mySampleApplication.server.BookReviewService</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>com.mySampleApplication.BookRepository PollerService</servlet-name>
        <servlet-class>com.mySampleApplication.server.PushServlet</servlet-class>
    </servlet>
    <servlet>
      <servlet-name>eventServiceImpl</servlet-name>
      <servlet-class>de.novanic.eventservice.service.EventServiceImpl</servlet-class>
    </servlet>

    <servlet-mapping>
      <servlet-name>eventServiceImpl</servlet-name>
      <url-pattern>/BookRepository/gwteventservice</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>BookReviewService</servlet-name>
        <url-pattern>/BookRepository/review/*</url-pattern>
    </servlet-mapping>


    <servlet-mapping>
        <servlet-name>com.mySampleApplication.BookRepository LibraryService</servlet-name>
        <url-pattern>/BookRepository/Library</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>com.mySampleApplication.BookRepository PollerService</servlet-name>
        <url-pattern>/BookRepository/Poller</url-pattern>
    </servlet-mapping>
</web-app>
